---
export interface Props {
    title: string;
    id: string;
}

const { title, id } = Astro.props;
---

<div class="mb-10 max-w-xl sm:text-center lg:mx-auto lg:mb-12 lg:max-w-2xl">
    <h2
        id={id}
        class="mb-6 text-center max-w-lg font-sans text-3xl font-bold leading-none tracking-tight text-gray-900 sm:text-4xl lg:mx-auto"
    >
        <span class="relative inline-block">
            <svg
                viewBox="0 0 52 24"
                fill="currentColor"
                class="absolute top-0 left-0 z-0 -mt-8 -ml-20 hidden w-32 text-violet-900/30 sm:block lg:-ml-28 lg:-mt-10 lg:w-32"
            >
                <defs>
                    <pattern
                        id="2c67e949-4a23-49f7-bf27-ca140852cf21"
                        x="0"
                        y="0"
                        width=".135"
                        height=".30"
                    >
                        <circle cx="1" cy="1" r=".7"></circle>
                    </pattern>
                </defs>
                <rect
                    fill="url(#2c67e949-4a23-49f7-bf27-ca140852cf21)"
                    width="52"
                    height="24"></rect>
            </svg>
            <span class="text-violet-900 leading-10">{title}</span>
        </span>
    </h2>
</div>
