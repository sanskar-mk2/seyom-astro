---
import { Image } from "@astrojs/image/components";
import gears from "../assets/images/gears.gif";
---

<div
    class="flex flex-col justify-center items-center bg-gradient-to-r from-primary to-secondary min-h-screen"
>
    <div class="grow"></div>
    <div
        id="big-head"
        class="2xl:text-8xl xl:text-7xl lg:text-6xl md:text-5xl text-2xl text-neutral"
    >
        <h1 class="inline text-violet-600 font-bold">Digital Solutions</h1>
        <h3 class="inline">for</h3>
        <h1 class="italic">New Age Business Processes</h1>
    </div>
    <div class="grow"></div>
    <div
        class="flex text-center items-center flex-col pb-20 lg:flex-row gap-16 lg:gap-0 text-2xl lg:text-5xl justify-around w-full"
    >
        <div
            id="tag1"
            class="text-white font-bold bg-gradient-to-br xl:w-80 w-60 p-2 xl:p-4 rounded shadow from-purple-500 to-pink-500"
        >
            Associate
            <svg
                class="animate-ping absolute fill-pink-900 -top-8 -right-8 w-16 h-16 text-pink-900"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-6 h-6"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z"
                ></path>
            </svg>
            <svg
                class="absolute fill-pink-900 -top-8 -right-8 w-16 h-16 text-pink-900"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-6 h-6"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z"
                ></path>
            </svg>
        </div>
        <div
            id="tag2"
            class="text-white xl:w-80 w-60 p-2 xl:p-4 font-bold bg-gradient-to-br rounded shadow from-indigo-500 to-blue-500"
        >
            <span class="z-20">Automate</span>
            <svg
                class="animate-spin z-10 absolute -top-8 -right-8 w-16 h-16 text-blue-900"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-6 h-6"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M4.5 12a7.5 7.5 0 0015 0m-15 0a7.5 7.5 0 1115 0m-15 0H3m16.5 0H21m-1.5 0H12m-8.457 3.077l1.41-.513m14.095-5.13l1.41-.513M5.106 17.785l1.15-.964m11.49-9.642l1.149-.964M7.501 19.795l.75-1.3m7.5-12.99l.75-1.3m-6.063 16.658l.26-1.477m2.605-14.772l.26-1.477m0 17.726l-.26-1.477M10.698 4.614l-.26-1.477M16.5 19.794l-.75-1.299M7.5 4.205L12 12m6.894 5.785l-1.149-.964M6.256 7.178l-1.15-.964m15.352 8.864l-1.41-.513M4.954 9.435l-1.41-.514M12.002 12l-3.75 6.495"
                ></path>
            </svg>
        </div>
        <div
            id="tag3"
            class="bg-gradient-to-br xl:w-80 p-2 xl:p-4 w-60 rounded shadow from-lime-500 to-green-500 text-white font-bold"
        >
            Elevate
            <svg
                id="r"
                class="absolute -top-8 -right-8 w-16 h-16 text-green-900"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-6 h-6"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M15.59 14.37a6 6 0 01-5.84 7.38v-4.8m5.84-2.58a14.98 14.98 0 006.16-12.12A14.98 14.98 0 009.631 8.41m5.96 5.96a14.926 14.926 0 01-5.841 2.58m-.119-8.54a6 6 0 00-7.381 5.84h4.8m2.581-5.84a14.927 14.927 0 00-2.58 5.84m2.699 2.7c-.103.021-.207.041-.311.06a15.09 15.09 0 01-2.448-2.448 14.9 14.9 0 01.06-.312m-2.24 2.39a4.493 4.493 0 00-1.757 4.306 4.493 4.493 0 004.306-1.758M16.5 9a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z"
                ></path>
            </svg>
        </div>
    </div>
</div>

<style>
    @keyframes bouncy {
        0%,
        100% {
            transform: translateY(-25%) rotate(-45deg);
            animation-timing-function: cubic-bezier(0.8, 0, 1, 1);
        }
        50% {
            transform: rotate(-45deg);
            animation-timing-function: cubic-bezier(0, 0, 0.2, 1);
        }
    }
    #r {
        animation: bouncy 1s infinite;
    }
</style>

<script>
    import { gsap } from "gsap";
    let tl = gsap.timeline();
    tl.from("#big-head", {
        duration: 3,
        opacity: 0,
        y: -100,
        stagger: 0.5,
        ease: "power4.out",
    })
        .from(
            "#tag1",
            {
                duration: 1,
                opacity: 0,
                x: -100,
                ease: "power4.out",
            },
            "-=2"
        )
        .from(
            "#tag2",
            {
                duration: 1,
                opacity: 0,
                x: -100,
                ease: "power4.out",
            },
            "-=1.5"
        )
        .from(
            "#tag3",
            {
                duration: 1,
                opacity: 0,
                x: -100,
                ease: "power4.out",
            },
            "-=1"
        );
</script>
