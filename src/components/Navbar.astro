---
import logo from "../assets/images/logo.png";
import { Image } from "@astrojs/image/components";
---

<div
    id="nav-section"
    class="shadow-xl z-50 navbar bg-gradient-to-r from-blue-100 to-purple-100 fixed md:top-10 md:w-11/12 md:mx-auto rounded pr-6 md:pr-10 md:left-10 md:right-10"
>
    <div class="navbar-start">
        <div class="dropdown">
            <label tabindex="0" class="btn btn-ghost xl:hidden">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5 stroke-neutral"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    ><path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h8m-8 6h16"></path>
                </svg>
            </label>
            <ul
                tabindex="0"
                class="font-bold font-mono text-2xl menu menu-compact dropdown-content mt-3 p-2 shadow bg-base-100 rounded-box w-52"
            >
                <li><a>Promise</a></li>
                <li tabindex="0">
                    <a class="justify-between">
                        Services
                        <svg
                            class="fill-current"
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            ><path
                                d="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z"
                            ></path>
                        </svg>
                    </a>
                    <ul class="p-2 bg-secondary">
                        <li><a>Accounting...</a></li>
                        <li><a>Business...</a></li>
                        <li><a>Developing...</a></li>
                    </ul>
                </li>
                <li><a>Team</a></li>
            </ul>
        </div>
        <a class="btn btn-ghost h-fit text-neutral normal-case text-xl">
            <span class="sm:hidden flex font-bold text-2xl">SÃ©yom</span>
            <Image
                src={logo}
                alt="logo"
                class="hidden sm:flex"
                width={300}
                dimensions="15:5"
            />
        </a>
    </div>
    <div
        class="font-bold font-mono text-2xl text-neutral navbar-center hidden xl:flex"
    >
        <ul class="menu menu-horizontal p-0">
            <li><a>Promise</a></li>
            <li tabindex="0">
                <a>
                    Services
                    <svg
                        class="fill-current"
                        xmlns="http://www.w3.org/2000/svg"
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        ><path
                            d="M7.41,8.58L12,13.17L16.59,8.58L18,10L12,16L6,10L7.41,8.58Z"
                        ></path>
                    </svg>
                </a>
                <ul class="p-2 bg-primary">
                    <li><a>Accounting and Book-keeping services 2.0</a></li>
                    <li><a>Business Transformation Solutions</a></li>
                    <li><a>Developing empowered leaders</a></li>
                </ul>
            </li>
            <li><a>Team</a></li>
        </ul>
    </div>
    <div class="navbar-end">
        <a class="btn bg-accent text-base-100 font-bold hover:text-accent"
            >Contact Us</a
        >
    </div>
</div>

<script>
    import { gsap } from "gsap";
    let navbar = document.getElementById("nav-section");
    let navOffset = navbar.offsetTop;
    window.addEventListener("scroll", () => {
        if (window.scrollY >= navOffset) {
            gsap.to("#nav-section", {
                y: 0,
                opacity: 1,
                duration: 1,
            });
            navbar.classList.remove("md:left-10");
            navbar.classList.remove("md:right-10");
            navbar.classList.remove("md:w-11/12");
            navbar.classList.remove("md:mx-auto");
            navbar.classList.remove("md:top-10");
        } else {
            gsap.to("#nav-section", {
                y: -100,
                opacity: 0,
                duration: 1,
            });
        }
    });
</script>
