---
import { Picture } from "@astrojs/image/components";
import add from "../assets/images/add.jpg";
---

<div
    class="py-12 px-2 flex flex-col justify-center items-center bg-gradient-to-r from-purple-200 to-blue-200 min-h-screen"
>
    <div class="grow h-0 sm:h-32"></div>

    <section class="text-gray-600 gap-2 mt-8 sm:mt-0 body-font flex flex-col">
        <div class="flex flex-col-reverse items-stretch gap-4 xl:flex-row">
            <div>
                <Picture
                    class="object-cover shadow-2xl"
                    src={add}
                    alt="handshake"
                    aspectRatio="8:6"
                    widths={[800, 800]}
                    sizes="(max-width: 1079px) 800px, 800px"
                    formats={["webp", "avif"]}
                />
            </div>
            <form method="post" action="https://tiwari.cc/reach.php">
                <div
                    class="h-full rounded bg-gradient-to-b from-purple-100 to-blue-100 flex flex-col p-4 shadow-xl"
                >
                    <h2
                        class="text-violet-900 font-bold text-lg mb-1 title-font"
                    >
                        Get in touch
                    </h2>
                    <p class="leading-relaxed mb-5 text-gray-600">
                        We'd love to hear from you. Please fill out the form
                        below
                    </p>
                    <div class="relative mb-4">
                        <label
                            for="name"
                            class="leading-7 text-sm text-gray-600">Name</label
                        >
                        <input
                            type="text"
                            required
                            id="name"
                            name="name"
                            class="w-full bg-white rounded border border-gray-300 focus:border-purple-500 focus:ring-2 focus:ring-purple-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out"
                        />
                    </div>
                    <div class="relative mb-4">
                        <label
                            for="email"
                            class="leading-7 text-sm text-gray-600">Email</label
                        >
                        <input
                            type="email"
                            id="email"
                            required
                            name="email"
                            class="w-full bg-white rounded border border-gray-300 focus:border-purple-500 focus:ring-2 focus:ring-purple-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out"
                        />
                    </div>
                    <div class="relative mb-4">
                        <label
                            for="message"
                            class="leading-7 text-sm text-gray-600"
                            >Message</label
                        >
                        <textarea
                            id="message"
                            required
                            name="message"
                            class="w-full bg-white rounded border border-gray-300 focus:border-purple-500 focus:ring-2 focus:ring-purple-200 h-32 text-base outline-none text-gray-700 py-1 px-3 resize-none leading-6 transition-colors duration-200 ease-in-out"
                        ></textarea>
                    </div>
                    <div class="grow"></div>
                    <input
                        type="submit"
                        class="text-white bg-violet-800 border-0 py-2 px-6 focus:outline-none hover:bg-purple-600 rounded text-lg"
                        value="Send"
                    />
                    <p class="text-xs text-gray-500 mt-3">
                        You will hear back from us soon.
                    </p>
                </div>
            </form>
        </div>
        <div class="flex mt-4 items-center justify-center h-full w-full">
            <div
                class="bg-gradient-to-r flex-wrap flex gap-4 justify-between items-center w-full rounded-xl shadow-xl px-8 py-4 from-blue-200 to-purple-200"
            >
                <div>
                    <h2
                        class="title-font font-semibold text-gray-900 tracking-widest text-xs"
                    >
                        ADDRESS
                    </h2>
                    <p class="mt-1">
                        A-1143, Sun WestBank, Ashram Road, Ahmedabad 380009
                    </p>
                </div>
                <div>
                    <h2
                        class="title-font font-semibold text-gray-900 tracking-widest text-xs"
                    >
                        EMAIL
                    </h2>
                    <a
                        href="mailto:business@seyom.in"
                        class="text-purple-500 leading-relaxed"
                        >business@seyom.in</a
                    >
                </div>
                <div>
                    <h2
                        class="title-font font-semibold text-gray-900 tracking-widest text-xs"
                    >
                        PHONE
                    </h2>
                    <p class="leading-relaxed">+(91)-9967265625</p>
                </div>
            </div>
        </div>
    </section>
</div>
