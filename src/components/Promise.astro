---
const our_promise = [
    "Significant Cost Saving",
    "Increased Efficiencies",
    "Inclusive Growth",
];
---

<section
    class="h-fit pt-48 md:pt-0 md:min-h-screen flex justify-center items-center bg-gradient-to-r from-purple-200 to-blue-200"
>
    <div class="gcontainer">
        <div class="gone z-20 w-60 h-60 flex justify-center items-center">
            <div
                class="w-48 h-48 backdrop-blur-3xl bg-gradient-to-br from-violet-600 to-blue-200 text-white rounded-full border-2 border-violet-600 flex justify-center items-center"
            >
                <p class="text-center">{our_promise[0]}</p>
            </div>
        </div>
        <div class="gtwo z-20 w-60 h-60 flex justify-end">
            <div
                class="w-48 h-48 backdrop-blur-3xl bg-gradient-to-br from-violet-600 to-blue-200 text-white rounded-full border-2 border-violet-600 flex justify-center items-center"
            >
                <p class="text-center">{our_promise[1]}</p>
            </div>
        </div>
        <div class="gthree w-60 h-60 flex">
            <div
                class="w-48 h-48 md:w-36 md:h-36 backdrop-blur-3xl bg-gradient-to-br from-violet-600 to-blue-200 text-white rounded-full border-2 border-violet-600 flex justify-center items-center"
            >
                <p class="text-center">{our_promise[2]}</p>
            </div>
        </div>
        <div class="gtitle z-10 w-60 h-60 flex justify-center items-center">
            <div
                class="w-52 h-52 backdrop-blur-3xl bg-gradient-to-br text-violet-600 rounded-full border-2 border-violet-600 flex justify-center items-center"
            >
                <div
                    class="gring w-60 h-60 absolute rounded-full border-dashed border-2 border-violet-600/80"
                >
                </div>
                <div
                    class="gring w-64 h-64 absolute rounded-full border-dashed border-2 border-violet-600/70"
                >
                </div>
                <div
                    class="gring w-72 h-72 absolute rounded-full border-dashed border-2 border-violet-600/50"
                >
                </div>
                <div
                    class="gring w-80 h-80 absolute rounded-full border-dashed border-2 border-violet-600/30"
                >
                </div>
                <div
                    class="gring w-96 h-96 absolute rounded-full border-dashed border-2 border-violet-600/20"
                >
                </div>
                <div
                    class="gring w-[500px] h-[500px] absolute rounded-full border-dashed border-2 border-violet-600/10"
                >
                </div>
                <p class="font-bold text-xl text-center">Our Promise To You</p>
            </div>
        </div>
    </div>
</section>

<style>
    @media (max-width: 768px) {
        .gcontainer {
            display: flex !important;
            flex-direction: column-reverse;
        }
        .gone,
        .gtwo,
        .gthree {
            justify-content: center !important;
            align-items: center !important;
        }
        .gtwo {
            transform: translateY(-200px) !important;
        }
        .gone {
            transform: translateY(-300px) !important;
        }
        .gthree {
            transform: translateY(-100px) !important;
        }
        .gring {
            display: none;
        }
    }
    .gcontainer {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        grid-template-rows: 1fr 1fr 1fr;
        gap: 0px 0px;
        grid-auto-flow: row;
        grid-template-areas:
            ". gone ."
            ". gtitle ."
            "gtwo . gthree";
    }

    .gone {
        grid-area: gone;
    }

    .gtwo {
        grid-area: gtwo;
    }

    .gthree {
        grid-area: gthree;
    }

    .gtitle {
        grid-area: gtitle;
    }
</style>

<script>
    // except mobile devices
    import { gsap } from "gsap";
    if (window.innerWidth > 768) {
        // float .gone, .gtwo, .gthree around
        gsap.to(".gone", {
            duration: 2,
            x: 5,
            y: 12,
            repeat: -1,
            yoyo: true,
            ease: "power1.inOut",
        });
        gsap.to(".gtwo", {
            duration: 3,
            x: -15,
            y: 11,
            repeat: -1,
            yoyo: true,
            ease: "power1.inOut",
        });
        gsap.to(".gthree", {
            duration: 4,
            x: 20,
            y: -23,
            repeat: -1,
            yoyo: true,
            ease: "power1.inOut",
        });
        // make .gtitle grow and shrink
        gsap.to(".gtitle", {
            duration: 2,
            scale: 1.1,
            repeat: -1,
            yoyo: true,
            ease: "power1.inOut",
        });
        // make .gone, .gtwo, .gthree animate faster when mouse is over
        const paused1 = gsap.to(".gone", {
            duration: 0.5,
            x: 5,
            y: 12,
            repeat: -1,
            yoyo: true,
            ease: "power1.inOut",
            paused: true,
        });
        const paused2 = gsap.to(".gtwo", {
            duration: 0.5,
            x: -15,
            y: 11,
            repeat: -1,
            yoyo: true,
            ease: "power1.inOut",
            paused: true,
        });
        const paused3 = gsap.to(".gthree", {
            duration: 0.5,
            x: 20,
            y: -23,
            repeat: -1,
            yoyo: true,
            ease: "power1.inOut",
            paused: true,
        });
        const paused4 = gsap.to(".gtitle", {
            duration: 0.5,
            scale: 1.1,
            repeat: -1,
            yoyo: true,
            ease: "power1.inOut",
            paused: true,
        });
        const container = document.querySelector(".gone");
        container.addEventListener("mouseenter", () => {
            paused1.play();
        });
        container.addEventListener("mouseleave", () => {
            paused1.pause();
        });
        const container2 = document.querySelector(".gtwo");
        container2.addEventListener("mouseenter", () => {
            paused2.play();
        });
        container2.addEventListener("mouseleave", () => {
            paused2.pause();
        });
        const container3 = document.querySelector(".gthree");
        container3.addEventListener("mouseenter", () => {
            paused3.play();
        });
        container3.addEventListener("mouseleave", () => {
            paused3.pause();
        });
        const container4 = document.querySelector(".gtitle");
        container4.addEventListener("mouseenter", () => {
            paused4.play();
        });
        container4.addEventListener("mouseleave", () => {
            paused4.pause();
        });
    }
</script>
