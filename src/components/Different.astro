---
import { Icon } from "astro-icon";

const items = [
    {
        title: "Customization",
        description: [
            "No one size fits all approach",
            "Customized templates, reports, KPIs and dashboards",
            "Different views and privileges for different users and levels in the organziation",
        ],
        icon: "flat-color-icons:radar-plot",
    },
    {
        title: "Integration",
        description: [
            "Constant on ground support",
            "Joint problem solving and review",
            "Integrated user testing and feedback",
        ],
        icon: "flat-color-icons:puzzle",
    },
    {
        title: "Passion",
        description: [
            "To succeed you have to believe in something with such a passion that it becomes a reality",
        ],
        icon: "flat-color-icons:portrait-mode",
    },
];
---

<section
    class="bg-gradient-to-r flex justify-center from-purple-200 to-blue-200 text-white"
>
    <div class="max-w-screen-xl px-4 py-16 sm:px-6 lg:px-8">
        <div class="max-w-xl">
            <h2 class="text-3xl text-violet-600 font-bold sm:text-4xl">
                What Makes Us Different (WIP)
            </h2>
            <p class="mt-4 text-gray-900">
                wip
            </p>
        </div>

        <div
            class="mt-8 grid grid-cols-1 gap-8 md:mt-16 md:grid-cols-2 md:gap-12 lg:grid-cols-3"
        >
            {
                items.map((item, index) => (
                    <div class="flex items-start">
                        <span class="flex-shrink-0 rounded-lg bg-purple-900 p-4">
                            <Icon name={item.icon} class="w-12 h-12" />
                        </span>

                        <div class="ml-4">
                            <h2 class="text-lg text-black font-bold">
                                {item.title}
                            </h2>

                            <p class="mt-1 text-sm text-gray-800">
                                {item.description.map((desc) => (
                                    <p class="text-gray-800">- {desc}</p>
                                ))}
                            </p>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
