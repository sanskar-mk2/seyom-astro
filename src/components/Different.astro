---
import { Icon } from "astro-icon";

const items = [
    {
        title: "Customization",
        description: [
            "No one size fits all approach",
            "Customized templates, reports, KPIs and dashboards",
            "Different views and privileges for different users and levels in the organziation",
        ],
        icon: "flat-color-icons:radar-plot",
    },
    {
        title: "Integration",
        description: [
            "Constant on ground support",
            "Joint problem solving and review",
            "Integrated user testing and feedback",
        ],
        icon: "flat-color-icons:puzzle",
    },
    {
        title: "Passion",
        description: [
            "To succeed you have to believe in something with such a passion that it becomes a reality",
        ],
        icon: "flat-color-icons:portrait-mode",
    },
];
---

<section
    class="overflow-x-hidden min-h-screen bg-gradient-to-r flex items-center justify-center from-purple-200 to-blue-200 text-white"
>
    <div class="mx-auto px-4 lg:px-8 py-16 sm:max-w-xl lg:max-w-full lg:py-20">
        <div
            class="mb-10 max-w-xl sm:text-center lg:mx-auto lg:mb-12 lg:max-w-2xl"
        >
            <h2
                id="diffhead"
                class="mb-6 text-center max-w-lg font-sans text-3xl font-bold leading-none tracking-tight text-gray-900 sm:text-4xl lg:mx-auto"
            >
                <span class="relative inline-block">
                    <svg
                        viewBox="0 0 52 24"
                        fill="currentColor"
                        class="absolute top-0 left-0 z-0 -mt-8 -ml-20 hidden w-32 text-violet-900/30 sm:block lg:-ml-28 lg:-mt-10 lg:w-32"
                    >
                        <defs>
                            <pattern
                                id="2c67e949-4a23-49f7-bf27-ca140852cf21"
                                x="0"
                                y="0"
                                width=".135"
                                height=".30"
                            >
                                <circle cx="1" cy="1" r=".7"></circle>
                            </pattern>
                        </defs>
                        <rect
                            fill="url(#2c67e949-4a23-49f7-bf27-ca140852cf21)"
                            width="52"
                            height="24"></rect>
                    </svg>
                    <span class="text-violet-900 leading-10"
                        >What Makes Us Different</span
                    >
                </span>
            </h2>
        </div>

        <div
            class="mx-auto grid gap-8 px-5 sm:grid-cols-1 sm:px-20 lg:grid-cols-3"
        >
            <div
                id="diff1"
                class="flex flex-col items-center rounded-lg border-2 border-fuchsia-400 bg-gradient-to-br from-purple-100 to-blue-100 px-4 py-4 shadow lg:items-start"
            >
                <p class="mt-3 text-purple-600 text-lg font-semibold pb-2">
                    {items[0].title}
                </p>
                <ul class="space-y-1 max-w-lg list-inside text-gray-700">
                    {
                        items[0].description.map((item) => (
                            <li class="flex">•{item}</li>
                        ))
                    }
                </ul>
            </div>
            <div
                id="diff2"
                class="flex flex-col items-center rounded-lg border-2 border-fuchsia-400 bg-gradient-to-b from-purple-100 to-blue-100 px-4 py-4 shadow lg:items-start"
            >
                <p class="mt-3 text-purple-600 text-lg font-semibold pb-2">
                    {items[1].title}
                </p>
                <ul class="space-y-1 max-w-lg list-inside text-gray-700">
                    {
                        items[1].description.map((item) => (
                            <li class="flex">•{item}</li>
                        ))
                    }
                </ul>
            </div>

            <div
                id="diff3"
                class="flex flex-col items-center rounded-lg border-2 border-fuchsia-400 bg-gradient-to-bl from-purple-100 to-blue-100 shadow lg:items-start"
            >
                <div
                    class="relative flex flex-1 flex-col justify-between p-4 lg:px-4 lg:py-4"
                >
                    <span
                        class="absolute -left-5 -bottom-6 rounded-full bg-violet-500 p-3 text-5xl text-white"
                    >
                        <svg
                            class="w-8 h-8"
                            xmlns="http://www.w3.org/2000/svg"
                            aria-hidden="true"
                            role="img"
                            width="1em"
                            height="1em"
                            preserveAspectRatio="xMidYMid meet"
                            viewBox="0 0 16 16"
                            ><path
                                fill="currentColor"
                                fill-rule="evenodd"
                                d="M7.16 3.5C4.73 5.06 3.55 6.67 3.55 9.36c.16-.05.3-.05.44-.05c1.27 0 2.5.86 2.5 2.41c0 1.61-1.03 2.61-2.5 2.61c-1.9 0-2.99-1.52-2.99-4.25c0-3.8 1.75-6.53 5.02-8.42L7.16 3.5zm7 0c-2.43 1.56-3.61 3.17-3.61 5.86c.16-.05.3-.05.44-.05c1.27 0 2.5.86 2.5 2.41c0 1.61-1.03 2.61-2.5 2.61c-1.89 0-2.98-1.52-2.98-4.25c0-3.8 1.75-6.53 5.02-8.42l1.14 1.84h-.01z"
                                clip-rule="evenodd"></path>
                        </svg>
                    </span>
                    <div class="flex-1">
                        <p
                            class="mt-3 text-purple-600 text-lg font-semibold pb-2"
                        >
                            {items[2].title}
                        </p>
                        <blockquote class="mb-4 flex-1">
                            <p
                                class="leading-relaxed text-gray-700 italic text-xl font-semibold"
                            >
                                {items[2].description[0]}
                            </p>
                        </blockquote>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";
    gsap.registerPlugin(ScrollTrigger);
    // make #diffhead fade in on scroll
    gsap.from("#diffhead", {
        scrollTrigger: {
            trigger: "#diffhead",
            start: "top 80%",
            end: "bottom 50%",
            scrub: true,
        },
        opacity: 0,
        duration: 1,
        y: 50,
    });

    // make #diff 1, 2, 3 slide in one after another on scroll
    let tl = gsap.timeline({
        scrollTrigger: {
            trigger: "#diffhead",
            start: "top 80%",
            end: "bottom 50%",
        },
    });
    tl.from("#diff1", { x: -1000, opacity: 0, duration: 3 })
        .from("#diff2", { x: -1000, opacity: 0, duration: 2 }, "-=0.5")
        .from("#diff3", { x: -1000, opacity: 0, duration: 2 }, "-=0.5");
</script>
